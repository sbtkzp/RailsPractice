<% if @user.errors.any? %>
  <div id="error-explanation">
    <div class="alert alert-error">
      The form has <%= pluralize(@user.errors.count, "error") %>
    </div>
  </div>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
